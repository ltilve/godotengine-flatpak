{
    "app-id": "org.godotengine.App",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "godot.x11.tools.64 -e",
     "finish-args": [
        "--allow=devel",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--share=network",
        "--filesystem=xdg-run/dconf"
    ],
    "modules": [
        {
            "name": "scons",
            "no-autogen": true,
            "cleanup": [ "*" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://downloads.sourceforge.net/project/scons/scons/2.4.1/scons-2.4.1.tar.gz",
                    "sha256": "8fc4f42928c69bcbb33e1be94b646f2c700b659693fabc778c192d4d22f753a7"
                },
                {
                    "type": "file",
                    "path": "scons-Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        },
        {
            "name": "godotengine",
            "no-autogen": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/godotengine/godot"
                },
                {
                    "type": "file",
                    "path": "godot-Makefile",
                    "dest-filename": "Makefile"
                }
            ]
        }
    ]
}
